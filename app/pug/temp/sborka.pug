// вызов header
+headerSmall('showed', 'hidden') 


mixin headerSmall(regClass, logClass)
	header.header
		.header__left
			.logo
				a(href="./index.html").logo__link
					i.fa.fa-paper-plane-o.logo__icon
					span.logo__title
						| Супер Сайт
		.header__right
			.authenticate__links
				a(href='register.html', class=regClass)
					| Регистрация
				a(href='login.html', class=logClass)
					| Вход

// вызов кнопок
+buttonArrowLeft('#')
+buttonArrowRight('#')

mixin buttonArrowLeft(link)
	a(href= link).button 
		i(aria-hidden="true").fa.fa-arrow-left
		| Назад

mixin buttonArrowRight(link)
	a(href= link).button
		| Вперед
		i(aria-hidden="true").fa.fa-arrow-right

mixin button(buttonValue, link)
	a(href=link).button
		= buttonValue



// вызов Card
+authenticateCard('Вход на сайт', 'E-mail', 'Пароль', 'Неверный email или пароль', 'Введите верные данные для входа!', 'Войти', '#')

+authenticateCard('Регистрация', 'E-mail', 'Пароль', 'Данный email уже занят', 'Используйте другой (!) email чтобы создать новый аккаунт.', 'Регистрация', '#')


mixin authenticateCard(text, placeholder1, placeholder2, errorWarn, errorText, buttonValue, link)
	.authenticate__card
		.authenticate__name
			h3
				= text
		form(id="authenticate-form").authenticate__form
			+authenticateError(errorWarn, errorText)
			input(type="text", name='email', placeholder=placeholder1).authenticate__input
			input(type="text", name='password', placeholder=placeholder2).authenticate__input
			include _checkbox.pug
			+button(buttonValue, link)


//---------------------------------------------------

mixin authenticateError(errorWarn, errorText)
	.authenticate__error
		p
			| Введите E-mail
	.authenticate__error
		p
			| Введите пароль
	.authenticate__error(id="authenticate__error")
		p
			= errorWarn
		.authenticate__info
			p
				=errorText
			p
				| Или воспользуйтесь 
				a(href='#')
					| восстановлением пароля
				|, чтобы войти на сайт.


