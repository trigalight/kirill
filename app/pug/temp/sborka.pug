+previewCard('img/blog/01-prev.jpg', 'Парк Йосемити', 'Читать', 'blog-single.html')

mixin previewCard(img, title, buttonValue, link)
	.col-xs-12.col-sm-4
		article.preview__card
			img(src= img).preview__img
			h4.preview__title
				= title
			+button(buttonValue, link)


