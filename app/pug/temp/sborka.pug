mixin review(userPhotoLink, modificatorClass, userName, date, text)
	<!-- Отдельный комментарий -->
	.review
		.hidden-xs.col-sm-1
			+userPhoto(userPhotoLink, modificatorClass)
		.col-sm-6
			.section__content.section__content--comments
				.blog-info.blog-info--fullWidth
						ul
							li.blog-info__element.blog-info__element--userName.color-grey
								= userName
							li.blog-info__element.blog-info__element--userDate.color-greyLight
								i(aria-hidden="true").fa.fa-clock-o
								= date
				p
					= text
