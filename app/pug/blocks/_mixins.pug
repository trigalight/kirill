// Обычные кнопки / use in __buttons.pug
mixin btn(color_fon, color_txt, title, link)
	.btn(class=`btn--${color_fon}`)&attributes(attributes)
		a(class= color_txt href= link)
			= title


// Обычные кнопки со стрелками
