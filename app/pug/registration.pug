extends ./templates/_template.pug

block variables
	- var title = 'Регистрация'
	- var url = 'login-page.html';

block content
	.login-page
		.login-image

			a#logo(href="/index.html")
				span.logo_icon  
				span.logo_text  Digital Lifestyle

			.navigation_button
					ul.main__enter--login
						li
							a(href='/' + url) Вход
				
			.container
				.row
					.check_block
									
						+check_in()

						+check_in_invalid()

						+check_in_error_password()

						+check_in_error_email()
		
			//- include ./blocks/_login__footer.pug

			.container
					+footer_small()
					br
					br